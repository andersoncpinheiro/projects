<div class="col-md-6">
  <div class="card flex-md-row mb-4 box-shadow h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
      <strong class="d-inline-block mb-2 text-primary">
        <%= article.category.name %>
      </strong>
      <h3 class="mb-0"><%= article.title %></h3>
      
      <div class="mb-1 text-muted">
        <%= render 'article_detail', article: article %>            
      </div>

      <p class="card-text mb-auto">
        <%= truncate(article.body, length: 100) %>
      </p>
      
      <%= link_to t('links.Continue_reading'), article, class: 'stretched-link' %>
    </div>
    
    <!-- Exibir a imagem usando o link fornecido -->
    <% if article.image.present? %>
      <img class="card-img-right flex-auto d-none d-md-block"
        alt="Article Image" style="width: 200px; height: 250px;"
        src="<%= article.image %>">
    <% end %>
  </div>
</div>
