<h1>Articles</h1>

<%= link_to 'Novo Article', new_article_path%>
<table>
	<thead>
	<tr><strong>
		<th>Nome</th>
		<th>Descrição</th>
		
		<th colspan="3"></th>
		</strong>
	</tr>
	</thead>
	
	<tbody>
		<% @articles.each do |article| %>
		<tr><td>
		<li>
			<%= link_to article.title, article %>
		</li></td>
		<li><td>
			<%= link_to article.body, article %>
		</li></td>

		</tr>
    <%end%>
	</tbody>
</table>
