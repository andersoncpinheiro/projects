<h1>Coins</h1>

<table>
	<thead>
	<tr><strong>
	<!--Translation for active record Models<%=@coins.human_attribute_name(:description)%>-->
		<th><%=@coins.human_attribute_name(:description)%></th>
		<th><%=@coins.human_attribute_name(:acronym)%></th>
		<th><%=@coins.human_attribute_name(:url_image)%></th>
		<th>Tipo de Mineração</th>
		<th colspan="3"></th>
		</strong>
	</tr>
	</thead>
	
	<tbody>
		<% @coins.each do |coin| %>
		<tr>
			<td><%= coin.description %></td>
			<td><%= coin.acronym %></td>
			<td> <img src="<%= coin.url_image%>" width="25p" height="25px"> </td>
			<td> <%= coin.mining_type.description %></td>
			<td><%= link_to t('links.show'), coin %></td>
			<td><%= link_to t('links.edit'), edit_coin_path(coin)%></td>
			<td><%= link_to t('links.delete'), coin, method: :delete, data:{confirm: t('confirmation')}%></td>
				
		</tr>
    <%end%>
	</tbody>
</table>


